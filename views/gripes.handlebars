

<html class="dark" lang="en">

<body class="dashboard">
    

    <section class="flex-center row" id="gripeHeading">
        <div class="col flex-center">
            <div class="aligned-right flex-spaces">
                <div class="margin-top-large">
                    <div class="aligned-middle" id="logo and posts">

                        {{!-- modals for adding encouragements and gripes --}}
                        {{> addEncGripe}}
                        
                    </div>
                </div>
            </div>
        </div>

        <div class="col padding-small flex-center" id="postPage">
            <div class="logo">
                <div class="padding-top-small">
                    <div id="logoGripes">
                        <img class="row aligned-middle no-border" src="assets/images/logo/gripe support title@1x.png">
                    </div>
                </div>
            </div>
            <div class="flex-center">
                <div class="padding-small no-border">
                    <div class="margin-small" id="heart and title">
                        <img class="row aligned-middle no-border" src=" assets/images/hearts/gripes-heart.png">
                    </div>
                </div>
            </div>
        </div>
        <div class="gripeTitle flex-center">
            <h2 id="gripeTitleBanner" class="aligned-middle gripes-title paper border margin-none full-rotate">gripes
            </h2>
        </div>

        {{!--
        <!-- textarea --> --}}
        <section class="row" id="postContainer">
            <div class="col full-rotate flex-center">
                <div class="paper border-3 padding-large margin-top-small">
                    <div class="margin-small">


                        <label for="postNumber" class="post-id" id="{{post.id}}">gripe</label>
                        <div>
                            <container class="myPost card paper border">
                                <div class="card-text">
                                    {{post.content}}
                                </div>
                            </container>
                        </div>
                    </div>
                    <p></p>

                    {{!-- add comment modal --}}
                    <div class="gripeModal commentOnGripeModal">
                        <label class="gripe-btn" for="modal-gripe-post">
                            <a class="paper-btn btn-small right" id="commentGripeBtn">comment</a>
                        </label>
                    </div>
                    <input class="modal-state" id="modal-gripe-post" type="checkbox">
                    <div class="modal">
                        <label class="modal-bg" for="modal-gripe-post"></label>
                        <div class="modal-body">
                            <label class="btn-close" for="modal-gripe-post">X</label>
                            <h4 class="modal-title">gripe//support</h4>
                            <p class="modal-text">
                            <div class="form-group">
                                <label for="gripeModalInput">say something encouraging</label>
                                <textarea class="input-block modalPostTextArea" id="large-input"></textarea>
                            </div>
                            <p></p>
                            <label class="aligned-right paper-btn" for="submitGripePost"
                                id="dashModalPostBtn">post</label>
                        </div>
                    </div>
                </div>
                {{!-- comments list --}}
                <div class="row flex-right marg">
                    <div class="col flex-spaces">
                        <div class="margin-none" id="commentBox">
                            <p class="card-title paper border-6 margin-none padding" id="commentGripeHeader">comments:
                            </p>

                            {{each post.comments as |comment|}}

                            <div class="container paper border-6 padding">{{comment.content}}</div>

                            {{/each}}
                        </div>
                    </div>

                    {{!-- hug counter --}}
                    <button id="hug-btn">
                        <div class="flex-spaces paper-btn border-4 padding-small margin-top-none gripeHug"
                            id="hug-counterGripe">

                            <img id="hugIcon" class="no-border" src="./assets/images/hugs/meowmeowhugz.png"
                                alt="hug-icon">
                            <!-- number of hugs -->
                            <p class="flex-center padding-right-small">{{post.hug_count}}</p>
                        </div>
                    </button>
                </div>
            </div>
        </section>

        <section id="nextPreviousBtns">
            <div class="margin-bottom-large">
                <a id="nextGripeBtn" class="next paper-btn btn-large">></a>
            </div>
        </section>
    </section>    
    <script src="../public/javascript/viewGripe.js"></script>
</body>