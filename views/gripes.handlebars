<html class="dark" lang="en">

<body class="dashboard flex-center row">

    <section class="flex-center row" style="margin-bottom:0px;margin-top:65px;">
        <div class="col flex-center">
            <div class="aligned-right flex-spaces">
                <div class="margin-top-large">
                    <div class="aligned-middle" id="logo and posts">
                        {{!-- modals for adding encouragements and gripes --}}
                        {{> addEncGripe}}
                    </div>
                </div>
            </div>
        </div>
        <div class="col padding-small flex-center" id="postPage">
            <div class="logo">
                <div class="padding-top-small">
                    <div id="logoGripes">
                        <img class="row aligned-middle no-border" src="assets/images/logo/gripe support title@1x.png">
                    </div>
                </div>
            </div>
            <div class="flex-center">
                <div class="padding-small no-border">
                    <div class="margin-small" id="heart and title">
                        <img class="row aligned-middle no-border" src=" assets/images/hearts/gripes-heart.png">
                    </div>
                </div>
            </div>
        </div>
        <div class="gripeTitle flex-center">
            <h2 id="gripeTitleBanner" class="aligned-middle gripes-title paper border margin-none full-rotate">gripes
            </h2>
        </div>
    </section>

    <!-- textarea -->
    <section class="row" id="postContainer">
        <div class="col full-rotate flex-center">
            <div class="paper border-3 padding-large margin-top-small">
                <div class="margin-small">
                    <div class="margin-small">
                        <label for="postNumber" class="post-id" id="{{post.id}}">
                            <div class="gripePost card paper border padding-large">
                                <h4>
                                    {{post.content}}
                                </h4>
                            </div>
                        </label>
                        <div class="margin-small">
                            <form class="comment-form">
                                <div>
                                    <container class="no-border">
                                        <textarea class="myCommentArea myPost margin-small padding-small"
                                            name="gripeComment"
                                            placeholder="Say something encouraging"></textarea>
                                    </container>
                                </div>
                                <p></p>
                                <button type="submit" class="col paper-btn aligned-right"
                                    id="commentGripeBtn">comment</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            {{!-- comments list --}}
            <div class="row flex-right marg">
                <div class="col flex-spaces">
                    <div class="margin-none" id="commentBox">
                        <p class="card-title paper border-6 margin-none padding" id="commentGripeHeader">
                            comments:
                        </p>

                        {{#each post.comments as |comment|}}

                        <div class="container paper border-6 padding">{{comment.content}}</div>

                        {{/each}}
                    </div>
                </div>
                <button id="hug-btn">
                    <div class="flex-spaces padding-small margin-top-none gripeHug" id="hug-counterGripe">

                        <img id="hugIcon" class="no-border" src="./assets/images/hugs/meowmeowhugz.png" alt="hug-icon">
                        <!-- number of hugs -->
                        <p class="flex-center padding-right-small">{{post.hug_count}}</p>
                    </div>
                </button>
            </div>
        </div>
    </section>

    <section id="nextPreviousBtns">
        <div class="margin-bottom-large">
            <btn id="nextGripeBtn" class="next paper-btn btn-large">></btn>
        </div>
    </section>
    </section>
    <script src="/javascript/viewGripe.js"></script>
</body>