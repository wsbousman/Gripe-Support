<!DOCTYPE html>
<html class="dark" lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://unpkg.com/papercss@1.8.2/dist/paper.min.css">
    <link rel="stylesheet" href="/stylesheets/stylesheet.css">
    <title>gripe//support-encouragements</title>

</head>

<body class="dashboard">

    <!-- collapsible menu with links to other pages -->
    <div class="collapsible">
        <input id="collapsible1" type="checkbox" name="collapsible1">
        <label class="paper-btn" for="collapsible1">
            <h5 class="padding-none margin-small menuEncButton flex-edges">menu</h5>
            <div class="bar1"></div>
            <div class="bar2"></div>
            <div class="bar3"></div>
        </label>
        <div class="collapsible-body">
            <ul class="inline">
                <li><a href="/gripes">gripes</a></li>
                <li><a href="/encouragements">encouragements</a></li>
                <li>
                    <a href="/"><img class="aligned-middle" src="./assets/images/hearts/little-green.png"
                            class="no-border"></a>
                </li>
            </ul>
        </div>
    </div>

    <section class="flex-center row" id="encHeading">
        <div class="col flex-center">
            <div class="aligned-right flex-spaces">
                <div class="margin-top-large">
                    <div class="aligned-middle" id="logo and posts">

                        <!-- modal to post a gripe on:click of button-->
                        <div class="gripeModal">
                            <label class="gripe-btn" for="modal-gripe-post">
                                <a class="paper-btn post-btn">post a gripe</a>
                            </label>
                        </div>
                        <input class="modal-state" id="modal-gripe-post" type="checkbox">
                        <div class="modal">
                            <label class="modal-bg" for="modal-gripe-post"></label>
                            <div class="modal-body">
                                <label class="btn-close" for="modal-gripe-post">X</label>
                                <h4 class="modal-title">gripe//support</h4>
                                <p class="modal-text">
                                <div class="form-group">
                                    <label for="gripeModalInput">what's eating you?</label>
                                    <textarea class="input-block modalPostTextArea" id="large-input"></textarea>
                                </div>
                                <p></p>
                                <label class="aligned-right paper-btn" for="submitGripePost"
                                    id="dashModalPostBtn">post</label>
                            </div>
                        </div>

                        <!-- modal to post encouragement on:click of button-->
                        <div class="encModal">
                            <label class="encouragement-btn" for="modal-enc-post">
                                <a class="post-btn paper-btn">post an encouragement</a>
                            </label>
                        </div>
                        <input class="modal-state" id="modal-enc-post" type="checkbox">
                        <div class="modal">
                            <label class="modal-bg" for="modal-enc-post"></label>
                            <div class="modal-body">
                                <label class="btn-close" for="modal-enc-post">X</label>
                                <h4 class="modal-title">gripe//support</h4>
                                <p class="modal-text">
                                <div class="form-group">
                                    <label for="encModalInput">what words would have made you feel better today?</label>
                                    <textarea class="input-block modalPostTextArea" id="large-input"></textarea>
                                </div>
                                <p></p>
                                <label class="aligned-right paper-btn" for="submitEncPost"
                                    id="dashModalPostBtn">post</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col padding-small flex-center" id="postPage">
            <div class="logo">
                <div class="padding-top-small">
                    <div id="logoEnc">
                        <img class="row aligned-middle no-border" src="assets/images/logo/gripe support title@1x.png">
                    </div>
                </div>
            </div>
            <div class="flex-center">
                <div class="padding-small no-border">
                    <div class="margin-small" id="heart and title">
                        <img class="row aligned-middle no-border" src=" assets/images/hearts/encouragements-heart.png">
                    </div>
                </div>
            </div>
        </div>
        <div class="encTitle flex-center">
            <h2 id="encTitleBanner" class="aligned-middle enc-title paper border margin-none full-rotate">encouragements
            </h2>
        </div>

        <!-- textarea -->
        <section class="row" id="postContainer">
            <div class="col full-rotate flex-center">
                <div class="paper border-3 padding-large margin-top-small">
                    <div class="margin-small">

                        <label for="postNumber" class="post-id" id="{{post.id}}">encouragement</label>
                        <form class="comment-form">
                            <div>
                                <container class="myPost card paper border">
                                    <textarea class="card-text" name="comment-body"
                                        placeholder="Say something encouraging">
                                        {{post.content}}
                                </textarea>
                                </container>
                            </div>
                    </div>
                    <p></p>
                    <button type="submit" class="paper-btn btn-small right" id="commentEncBtn">comment</button>
                    </form>

                </div>
                <!-- comments -->
                <div class="row flex-right marg">
                    <div class="col flex-spaces">
                        <div class="margin-none" id="commentBox">
                            <p class="card-title paper border-6 margin-none padding" id="commentEncHeader">comments:</p>

                            {{#each post.comments as |comment|}}
                            <div class="container paper border-6 padding">{{comment.content}}</div>
                            {{/each}}

                        </div>
                    </div>
                    <button id="hug-btn">
                        <div class="flex-spaces paper-btn border-4 padding-small margin-top-none hug-counter"
                            id="hug-counterEnc">

                            <img id="hugIcon" class="no-border" src="./assets/images/hugs/meowmeowhugz.png"
                                alt="hug-icon">
                            <!-- number of hugs -->
                            <p class="flex-center padding-right-small">{{post.hug_count}}</p>
                        </div>
                    </button>
                </div>
            </div>

        </section>

        <section id="nextPreviousBtns">
            <div class="margin-bottom-large">
                <btn id="nextEncBtn" class="next paper-btn btn-large">></btn>
            </div>
        </section>

    </section>
    <script src="/javascript/viewEncouragement.js"></script>
</body>