<html class="dark" lang="en">

<body class="dashboard">

    <!-- navigation bar -->
    <section class="flex-center row" id="gripeHeading">
        <div class="col flex-center">
            <div class="aligned-right flex-spaces">
                <div class="margin-top-large">
                    <div class="aligned-middle" id="logo and posts">

                        {{!-- modals for adding encouragements and gripes --}}
                        {{> addEncGripe}}

                    </div>
                </div>
            </div>
        </div>
    <section>
        <div class="col padding-small flex-center" id="postPage">
            <div class="aligned-middle margin-top-large">
                <div class="margin-top-large padding-top-large">
                    <div id="logo and posts">
                        <img class="row aligned-middle no-border" src="/assets/images/logo/gripe support title@1x.png">
                    </div>
                </div>
            </div>
            <div class="flex-center">
                <div class="padding-small no-border">
                    <div class="margin-small" id="heart and title">
                        <img class="row aligned-middle no-border" src="/assets/images/hearts/edit-posts-heart.png">
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- textarea -->
    <section class="row" id="postContainer">
        <div class="col full-rotate flex-center">
            <div class="paper border-2 padding-large">
                <div class="">
                    <div class="text-box">
                        <label for="postNumber">The {{post.category.name}} you made on {{post.created_at}}</label>
                        <div>
                            <container class="myPost card paper border">
                                <div class="card-text">{{post.content}}</div>
                            </container>
                        </div>
                    </div>
                    <p></p>
                    <label type="submit" class="paper-btn border btn-small right deletePostBtn" id="{{post.id}}" onClick="reply_click(this.id)">delete</label>
                </div>
            </div>
            <!-- hug counter -->
            <div class="row flex-right marg">
                <div class="col flex-spaces">
                    <div class="margin-none" id="commentBox">
                        <p class="card-title paper border-6 margin-none padding" id="commentGripeHeader">
                            comments:
                        </p>

                        {{#each post.comments as |comment|}}

                        <div class="container paper border-6 padding">{{comment.content}}</div>

                        {{/each}}
                    </div>
                </div>

                {{!-- hug counter --}}
                <button id="hug-btn">
                    <div class="flex-spaces padding-small margin-top-none gripeHug"
                        id="hug-counterGripe">

                        <img id="hugIcon" class="no-border" src="./assets/images/hugs/meowmeowhugz.png" alt="hug-icon">
                        <!-- number of hugs -->
                        <p class="flex-center padding-right-small">{{post.hug_count}}</p>
                    </div>
                </button>
            </div>
        </div>
        <script src="/javascript/deletePost.js"></script>

  
    </section>
